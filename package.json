{
  "name": "csrf-login",
  "description": "Login from command line to the websites that use CSRF protection",
  "main": "src/csrf-login.js",
  "version": "0.0.0-semantic-release",
  "scripts": {
    "test": "npm run unit && npm run demo-test",
    "unit": "rocha src/*-spec.js",
    "pretest": "npm run style && npm run lint",
    "lint": "eslint src",
    "style": "jscs src/*.js --fix",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "issues": "git-issues",
    "commit": "commit-wizard",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "demo-server": "node demo/server.js",
    "demo-test": "mocha demo/*-spec.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/csrf-login.git"
  },
  "keywords": [
    "login",
    "cli",
    "command",
    "line",
    "csrf",
    "token",
    "test",
    "utility"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/csrf-login/issues"
  },
  "files": [
    "src/*.js",
    "src/*.json",
    "!src/*-spec.js",
    "demo/*.js"
  ],
  "homepage": "https://github.com/bahmutov/csrf-login#readme",
  "dependencies": {
    "bluebird": "2.9.34",
    "check-more-types": "2.18.0",
    "cheerio": "0.19.0",
    "debug": "2.2.0",
    "first-existing": "1.0.0",
    "lazy-ass": "1.3.0",
    "nconf": "0.7.2",
    "request": "2.60.0"
  },
  "devDependencies": {
    "body-parser": "1.15.0",
    "csurf": "1.8.3",
    "eslint": "1.1.0",
    "express": "4.13.4",
    "express-session": "1.13.0",
    "git-issues": "1.2.0",
    "helmet": "1.3.0",
    "jscs": "2.1.0",
    "mocha": "2.4.5",
    "morgan": "1.7.0",
    "pre-git": "3.3.0",
    "pug": "2.0.0-alpha3",
    "really-need": "1.9.0",
    "rocha": "2.0.0",
    "semantic-release": "^4.3.5",
    "session-file-store": "0.2.0",
    "supertest": "1.2.0"
  },
  "pre-commit": [
    "npm test",
    "npm run style"
  ],
  "post-commit": "npm version",
  "eslintConfig": {
    "env": {
      "node": true
    },
    "rules": {
      "no-unused-expressions": 2,
      "no-undef": 2
    },
    "globals": {
      "la": true
    }
  },
  "config": {
    "pre-git": {
      "commit-msg": [
        "simple"
      ],
      "pre-commit": [
        "npm run lint",
        "npm run style",
        "npm test"
      ],
      "pre-push": [
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  }
}
